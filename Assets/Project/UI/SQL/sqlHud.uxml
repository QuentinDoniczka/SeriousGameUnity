        <ui:Label name="task-name" class="task-name" text="Nom de la tâche" />
        <ui:Label name="task-description" class="task-description" text="Description de la tâche" />

        <ui:TextField name="query-input" class="query-input" multiline="true" />
        <ui:Button name="execute-button" class="execute-button" text="Exécuter" />

        <ui:VisualElement name="result-container" class="result-container">
            <ui:Label name="result" class="result" text="" />
