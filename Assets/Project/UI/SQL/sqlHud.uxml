        <ui:VisualElement name="hint-container" class="hint-container">
            <ui:Label text="Indice:" class="hint-label" />
            <ui:Label name="hint" class="hint" text="" />
        </ui:VisualElement>
    </ui:VisualElement>
</ui:UXML>